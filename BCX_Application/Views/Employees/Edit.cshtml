@model BCX_CORE.DTOs.Employees.EmployeeDto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Role</label>
                <select class="custom-select" asp-items="ViewBag.Roles" asp-for="RoleId" name="RoleId" id="RoleId"></select>
                <span asp-validation-for="RoleId"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImagePath" class="control-label"></label>
                @if (Model.ImagePath != null)
	            {
                     <img src="@("/images/" + Model.ImagePath)" class="rounded-circle" asp-append-version="true" width="80px" height="80px" />
                     <br />
                    
	            }
                

                <div class="custom-file">
                    <input asp-for="ImageFile" accept="image/*" />
                    <label class="custom-file-label" for="ImageFile">Choose file</label>
                </div>
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" asp-controller="Employees" asp-data-id="Id" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
